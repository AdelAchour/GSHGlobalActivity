<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/asker"
        android:background="#d58080"
        android:src="@drawable/logoutdialog"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vous allez être déconnecté de votre session"
        android:id="@+id/messagealert"
        android:layout_below="@+id/asker"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="50dp"
        android:paddingEnd="50dp"
        android:paddingStart="50dp"
        android:textSize="19sp"
        android:textColor="#3e3e3e"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/messagealert">

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="Ok"
            android:background="#82becf"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/fermer"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="Annuler"
            android:background="#cf8289"
            android:layout_weight="1.0" />

    </LinearLayout>



</RelativeLayout>