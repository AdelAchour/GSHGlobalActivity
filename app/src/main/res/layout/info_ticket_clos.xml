<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <RelativeLayout
        android:id="@+id/RelativeBigBoss"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ProgressBar
            android:id="@+id/progressBarInfo"
            style="?android:attr/progressBarStyle"
            android:layout_width="102dp"
            android:layout_height="72dp"
            android:layout_marginTop="05dp"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/information"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="170dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LinearTitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Titre "/>

                <TextView
                    android:id="@+id/titreAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95dp"
                    android:textColor="#ff000000"
                    android:paddingEnd="20dp"
                    android:text="Titre answer "/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearDemandeur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/demandeurLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Demandeur "/>

                <TextView
                    android:id="@+id/demandeurAnswer"
                    android:textColor="#172b60"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:paddingEnd="20dp"
                    android:text="demandeur answer" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearObs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ObsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Observateur "/>

                <TextView
                    android:id="@+id/ObsAnswer"
                    android:textColor="#172b60"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46dp"
                    android:paddingEnd="20dp"
                    android:text="observateur answer" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearCategorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/categorieLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Catégorie "/>

                <TextView
                    android:id="@+id/categorieAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="62dp"
                    android:paddingEnd="20dp"
                    android:textColor="#ff000000"
                    android:text="Catégorie answer" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/LinearStatut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/StatutLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Statut"/>

                <TextView
                    android:id="@+id/StatutAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="86dp"
                    android:textColor="#ff000000"
                    android:paddingEnd="20dp"
                    android:text="Statut answer" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearDebut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/DebutLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Date de début"/>

                <TextView
                    android:id="@+id/DebutAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:textColor="#ff000000"
                    android:paddingEnd="20dp"
                    android:text="date de début answer" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearEcheance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/EcheanceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Date d'échéance"/>

                <TextView
                    android:id="@+id/EcheanceAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ff000000"
                    android:paddingEnd="20dp"
                    android:text="date d'échéance answer" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearCloture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ClotureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Date de cloture"/>

                <TextView
                    android:id="@+id/ClotureAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:textColor="#ff000000"
                    android:paddingEnd="20dp"
                    android:text="date de cloture answer" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearInfoTemps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/DetailTimeAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="146dp"
                    android:textColor="#60174a"
                    android:paddingEnd="20dp"
                    android:textStyle="bold"
                    android:text="Temps de résolution / retard" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/LinearSLA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/SLALabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="SLA"/>

                <TextView
                    android:id="@+id/SLAAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="98dp"
                    android:textColor="#ff000000"
                    android:paddingEnd="20dp"
                    android:text="SLA answer" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LieuLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Lieu"/>

                <TextView
                    android:id="@+id/LieuAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="97dp"
                    android:textColor="#ff000000"
                    android:paddingEnd="20dp"
                    android:text="Lieu answer" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/DescriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Description"/>

                <TextView
                    android:id="@+id/DescriptionAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:textColor="#ff000000"
                    android:text="Description answer" />

            </LinearLayout>



        </LinearLayout>



    </RelativeLayout>




</ScrollView>