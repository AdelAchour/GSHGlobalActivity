<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/asker"
        android:background="#d58080"
        android:src="@drawable/temps"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temps de retard"
        android:id="@+id/StatutTicket"
        android:layout_below="@+id/asker"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="35dp"
        android:textSize="19sp"
        android:textColor="#1a4b79"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:15:25"
        android:id="@+id/livetempsretard"
        android:layout_below="@+id/StatutTicket"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="40dp"
        android:textSize="17sp"
        android:textColor="#840707"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/livetempsretard">

        <Button
            android:id="@+id/fermer"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="#cf8289"
            android:text="Fermer" />

    </LinearLayout>



</RelativeLayout>