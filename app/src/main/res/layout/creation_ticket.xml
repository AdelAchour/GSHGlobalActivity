<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ITs.activity.CreationTicket">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cccccc">

        <LinearLayout
            android:id="@+id/greenbglayout"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="vertical"
            android:background="@color/colorPrimary">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/titleCard"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    app:cardBackgroundColor="@color/color_card_profile"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_margin="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/titleticket"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp"
                            android:weightSum="100">
                            <TextView
                                android:layout_weight="100"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:text="@string/tickettitlechart"
                                android:textStyle="bold"
                                android:paddingEnd="15dp"
                                android:textSize="13sp"/>

                            <EditText
                                android:id="@+id/titreNewTicket"
                                android:singleLine="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dp"
                                android:hint="Titre du ticket"
                                android:textSize="20dp"/>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/categoryCard"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    app:cardBackgroundColor="@color/color_card_profile"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_margin="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/structure"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp"
                            android:weightSum="100">
                            <TextView
                                android:layout_weight="100"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:text="@string/categoryticketchart"
                                android:textStyle="bold"
                                android:paddingEnd="15dp"
                                android:textSize="13sp"/>

                            <EditText
                                android:id="@+id/categorieNewTicket"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dp"
                                android:hint="CatÃ©gorie du ticket"
                                android:textSize="20dp"/>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/typeCard"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    app:cardBackgroundColor="@color/color_card_profile"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_margin="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/typeticket"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp"
                            android:weightSum="100">
                            <TextView
                                android:layout_weight="100"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:text="@string/typeticketchart"
                                android:textStyle="bold"
                                android:paddingEnd="15dp"
                                android:textSize="13sp"/>

                            <EditText
                                android:id="@+id/typeNewTicket"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_marginEnd="20dp"
                                android:hint="Type du ticket"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/contentCard"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    app:cardBackgroundColor="@color/color_card_profile"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_margin="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/pencil"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp"
                            android:weightSum="100">
                            <TextView
                                android:layout_weight="100"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:text="@string/contentticketchart"
                                android:textStyle="bold"
                                android:paddingEnd="15dp"
                                android:textSize="13sp"/>

                            <EditText
                                android:id="@+id/descriptionNewTicket"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="20sp"
                                android:layout_marginEnd="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:autoLink="all"
                                android:hint="Description du ticket"
                                android:lines="5"
                                android:minLines="1"
                                android:gravity="top|left"
                                android:maxLines="50"
                                android:scrollbars="none"
                                android:inputType="textMultiLine|textCapSentences"/>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <Button
                android:id="@+id/createTicketButton"
                android:text="@string/createticket"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_solid"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>