<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="50dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Création d'un nouveau ticket"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp">

        <EditText
            android:id="@+id/titreNewTicket"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titre du ticket"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/categorieNewTicket"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Catégorie du ticket"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/typeNewTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Type du ticket"
            android:textSize="20dp"/>

      <!--  <TextView
            android:id="@+id/categorieNewTicket"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catégorie"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/typeNewTicket"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/> -->

        <EditText
            android:id="@+id/descriptionNewTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:autoLink="all"
            android:hint="Description du ticket"
            android:lines="5"
            android:minLines="1"
            android:gravity="top|left"
            android:maxLines="50"
            android:scrollbars="none"
            android:inputType="textMultiLine|textCapSentences"/>

        <Button
            android:id="@+id/createTicketButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_button_transparent"
            android:text="Créer"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>



</LinearLayout>

</ScrollView>