<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/backgroundRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/titreTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Ceci est le titre du ticket il peut etre long"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titreTV"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/slaTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PrioritÃ© et tout"
            android:textSize="13dp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/SLARestantTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Il reste 2min"
            android:textSize="13dp"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark"
            />


    </LinearLayout>


    <TextView
        android:id="@+id/dateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titreTV"
        android:layout_marginTop="19dp"
        android:text="Date Date Date Date Date "
        android:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/basse" />


</RelativeLayout>

