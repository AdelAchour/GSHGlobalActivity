                    -->
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Temps moyen de résolution:"
                android:textColor="#4c4c4c"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tempsresolutionMoyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="3h14m56s"
                android:textColor="#173d0d"
                android:textSize="18dp" />

            <ProgressBar
                android:id="@+id/progressBarTempsMoyen"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Temps moyen de retard:"
                android:textColor="#4c4c4c"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tempsretardMoyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="1h10m25s"
                android:textColor="#711212"
                android:textSize="18dp" />


            <!-- Fin nombre de tickets (texts) -->
        </LinearLayout>
    </LinearLayout>
</ScrollView>